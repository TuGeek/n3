{
    "version": "2.0.0",
    "command": "npm",
    "tasks": [
        {   // Build task, Cmd+Shift+B
            // "npm run build"
            "label": "build",
            "group": "build",
            "args": [
                "run",
                "build"
            ]
        },
        {
            // Test task, Cmd+Shift+T
            // "npm test"
            "label": "test",
            "group": "test",
            "args": [
                "test"
            ]
        }
    ]
}
